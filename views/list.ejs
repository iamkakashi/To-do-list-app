<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>To Do List</title>
  <link rel="stylesheet" href="css/styles.css">
</head>

<body>
  <div class="box" id="heading">
    <h1><%= din %></h1>
  </div>
  <div class="box">

    <% newTask.forEach(function(ele){ %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="oldtask" value="<%=ele._id%>" onchange="this.form.submit()">
        <p><%= ele.name %></p>
      </div>
      <input type="hidden" name="listname" value="<%=din%>">
    </form>
    <% }) %>

    <form class="item" action="/" method="post">
      <input type="text" name="task" placeholder="Add a New Task" autocomplete="off">
      <button type="submit" name="listname" value="<%=din%>" >+</button>
    </form>
  </div>
  <footer>
    <p>Made by Naman Garg</p>
  </footer>

</body>

</html>
